{    
    "express": {
        "view cache": false,
        "view engine": "js",
        "views": "path:./.build/templates"
    },
    

    
    "view engines": {
        "js": {
            "module": "makara",
            "renderer": {
                "method": "js",
                "arguments": [
                    { "cache": true, "helpers": "config:dust.helpers" }
                ]
            }
        }
    },

    "dust": {
        "helpers": [
    
        ]
    },
    

    

    "specialization": {
    },

    "middleware": {

        
        "makara": {
            "priority": 100,
            "enabled": true,
            "module": {
                "name": "makara",
                "arguments": [
                    {
                        "i18n": "config:i18n",
                        "specialization": "config:specialization"
                    }
                ]
            }
        },
        
        "appsec": {
            "priority": 100,
            "enabled": true,
            "module": {
                "name": "lusca",
                "arguments": [
                    {
                        "csrf": false ,//,
                        "csp": false , //{ /* ... */},
                        "xframe": false ,// 'SAMEORIGIN',
                        "p3p": false , //'ABCDEF',
                        "hsts": false , //{maxAge: 31536000, includeSubDomains: true, preload: true},
                        "xssProtection": false // true
                    }
                ]
            }
        },
        

        "static": {
            "module": {
                "arguments": [ "path:./.build" ]
            }
        },

        "router": {
            "module": {
                "arguments": [{ "directory": "path:./controllers" }]
            }
        }

    }
}
